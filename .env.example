# PaperBook Environment Variables
# Copy this file to .env.development or .env.production and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
VITE_API_URL=http://localhost:3001/api

# =============================================================================
# Feature Flags
# =============================================================================

# Enable Mock Service Worker for API mocking (development only)
VITE_ENABLE_MSW=true

# Enable analytics tracking (production only)
VITE_ENABLE_ANALYTICS=false

# Enable Sentry error tracking (production only)
VITE_ENABLE_SENTRY=false

# =============================================================================
# Session Configuration
# =============================================================================

# Session timeout in milliseconds (default: 30 minutes)
VITE_SESSION_TIMEOUT_MS=1800000

# =============================================================================
# External Services (Optional)
# =============================================================================

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxx@sentry.io/xxx

# Analytics tracking ID (Google Analytics, Mixpanel, etc.)
# VITE_ANALYTICS_ID=UA-XXXXXXXXX

# =============================================================================
# App Info
# =============================================================================

# Application version
VITE_APP_VERSION=0.1.0

# Environment name (development, staging, production)
VITE_APP_ENV=development
